class Solution {
  public:
    int maxSubarraySum(vector<int>& arr, int k) {
    int n=arr.size();
    int windowSize=0;
    int maxSum=INT_MIN;
    for(int i=0;i<n;i++){
    windowSize += arr[i];
    
    if(i >= k-1){
        maxSum=max(maxSum,windowSize);
        windowSize -= arr[i-k+1];
    }
    }    
    return maxSum;
        
    }
};
